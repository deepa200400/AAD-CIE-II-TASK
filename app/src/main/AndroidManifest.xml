<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fuelpump">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fuel_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fuel_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FuelPump">
        <activity android:name=".Register" android:label="Registration Form"></activity>
        <activity android:name=".Login" android:label="Login" />
        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Admin"
            android:screenOrientation="landscape" android:label="Admin"/>
        <activity android:name=".Driver" android:label="Driver" />
        <activity android:name=".MainActivity" android:label="Home"/>
    </application>

</manifest>